<div class="page-header"><h1>Please add Institution Information</h1><h4>Welcome... <%= current_user.first_name+" "+current_user.last_name%></h4>
<%=form_for :institution, url: '/institution',html: {class: 'form-horizontal'} do |f| %>
<%= render 'shared/errors', object: @institution %>
<div class="field form-group">
      <%=f.label :institution_name,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_field :institution_name , class: "form-control"%>
  </div>
</div>
<div class="field form-group">
      <%=f.label :institution_level,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_field :institution_level , class: "form-control"%>
  </div>
</div>
<div class="field form-group">
      <%=f.label :institution_address,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_area :institution_address , class: "form-control" %>
  </div>
</div>
<div class="actions form-group">
  <div class="col-sm-offset-4 col-sm-4">
    <%=f.submit "Save",class: "btn btn-default btn-primary" %>
    </div>
</div>
<% end %>
