<div class="container">
    <div class="row">
        <div class="col-lg-4">
          <%@books.each do |book|%>
          <%= link_to image_tag(book.image.url, class: "img-responsive")%>
           <div>Title: <%= book.title %> </div>
          <div>Author: <%= book.author%></div>
          <a href="/chart/view/<%=book.id%>">Show details</a>
          <% end %>
        </div>
    </div>
</div>
