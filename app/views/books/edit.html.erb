<div class="page-header"><h1>Book Update Page</h1><h4>Welcome... <%= current_user.first_name+" "+current_user.last_name%></h4>
<%=form_for :book, method: :patch,url: '/book/update',html: {class: 'form-horizontal'} do |f| %>
<input type="hidden" name="hidden_book_id" value="<%= params[:id] %>"/>
<div class="field form-group">
   <%=f.label :title,class: 'col-sm-2 control-label' %>
   <div class="col-sm-4">
   <%=f.text_field :title, class: "form-control"%>
</div>
</div>

<div class="field form-group">
  <%=f.label :author,class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
  <%= f.text_field :author, class: "form-control" %>
</div>
</div>

<div class="field form-group">
  <%=f.label :standard,class: "col-sm-2 control-label" %>
  <div class=" form group col-sm-4">
    <%= f.select :standard, ['University', 'College', 'Highschool'],{:include_blank =>"---Please Select Standard---"},{class: "form-control"}%>
</div>
</div>

<div class="field form-group">
  <%=f.label :subject,class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.select :subject, ['Language', 'Science', 'Engineering','Geography','Math','Education'],{:include_blank =>"---Please Select Subject---"},{class: "form-control"}%>
</div>
</div>

<div class="field form-group">
  <%=f.label :language,class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.select :language, ['English', 'French', 'Amharic'],{:include_blank =>"---Please Select Language---"},{class: "form-control"}%>
</div>
</div>

<div class="field form-group">
  <%=f.label :message,class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
  <%= f.text_area :message, class: "form-control" %>
</div>
</div>

<div class="field form-group">
  <%=f.label :image,'Original Image',class: "col-sm-2 control-label" %>
     <div class="col-sm-4">
       <%=image_tag @book.image.url(:thumb), class: "img-responsive"%>
</div>
</div>
<div class="field form-group">
  <%=f.label :image,'New image',class: "col-sm-2 control-label" %>
     <div class="col-sm-4">
     <%= f.file_field :image, class: "form-control" %>
</div>
</div>
<div class="actions form-group">
<div class="col-sm-offset-2 col-sm-4">
  <%=f.submit "Update",class: "btn btn-default btn-primary" %>
</div>
</div>
<% end %>
