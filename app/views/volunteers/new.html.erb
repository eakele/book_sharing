<div class="page-header"><h1>Volunteer Registration Page</h1><h4>Welcome... <%= current_user.first_name+" "+current_user.last_name%></h4>
<%=form_for :volunteer, url: '/volunteer',html: {class: 'form-horizontal'} do |f| %>
<%= render 'shared/errors', object: @volunteer %>
<%=f.label :departure_date,class: 'col-sm-4 control-label'%>
<div class="container">
    <div class='col-md-5'>
        <div class="form-group">
            <div class='input-group date' id='datetimepicker6'>
              <%= f.text_field :departure_date , class: "form-control"%>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    </div>
    <%=f.label :arrival_date,class: 'col-sm-4 control-label'%>
    <div class="container">
    <div class='col-md-5'>
        <div class="form-group">
            <div class='input-group date' id='datetimepicker7'>
              <%= f.text_field :arrival_date , class: "form-control"%>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
$(function () {
    $('#datetimepicker6').datetimepicker();
    $('#datetimepicker7').datetimepicker({
        useCurrent: false //Important! See issue #1075
    });
    $("#datetimepicker6").on("dp.change", function (e) {
        $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
    });
    $("#datetimepicker7").on("dp.change", function (e) {
        $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
    });
});
</script>
<div class="field form-group">
      <%=f.label :destination_country,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_field :destination_country , class: "form-control"%>
  </div>
</div>
<div class="field form-group">
      <%=f.label :destination_city,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_field :destination_city , class: "form-control"%>
  </div>
</div>
<div class="field form-group">
      <%=f.label :destination_province,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_field :destination_province , class: "form-control"%>
    </div>
</div>
<div class="field form-group">
      <%=f.label :message,class: 'col-sm-4 control-label'%>
    <div class='col-md-5'>
      <%= f.text_area :message , class: "form-control" %>
  </div>
</div>
<div class="actions form-group">
  <div class="col-sm-offset-4 col-sm-4">
    <%=f.submit "Save",class: "btn btn-default btn-primary" %>
    </div>
</div>
<% end %>
