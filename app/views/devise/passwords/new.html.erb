<div class="page-header"><h1>Forgot your password?</h1></div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email ,class:'col-sm-4 control-label'%>
     <div class="col-sm-4">
    <%= f.email_field :email, autofocus: true , class: "form-control"%>
  </div>
</div>
<div class="actions form-group">
  <div class="col-sm-offset-4 col-sm-4">
    <%= f.submit "Send me reset password instructions",class: "btn btn-default btn-primary"  %>
  </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
